# Flask Configuration
FLASK_ENV=development
DEBUG=true
HOST=0.0.0.0
PORT=5000

# Cache Configuration
CACHE_BACKEND=simple
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Redis Configuration (if using redis cache)
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Request Configuration
REQUEST_TIMEOUT=15
MAX_RETRIES=2
RATE_LIMIT_DELAY=1.5