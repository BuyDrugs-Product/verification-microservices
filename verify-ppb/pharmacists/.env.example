# Environment Configuration for PPB Pharmacist Verification Service
# Copy this file to .env and adjust values as needed

# Flask Configuration
FLASK_ENV=development
DEBUG=True
HOST=0.0.0.0
PORT=5002

# PPB Portal (do not change unless PPB moves their portal)
PPB_BASE_URL=https://practice.pharmacyboardkenya.org

# Request Configuration
REQUEST_TIMEOUT=15
MAX_RETRIES=2
RETRY_BACKOFF=0.3

# Rate Limiting (CRITICAL - prevents IP blocking)
RATE_LIMIT_DELAY=1.5

# Caching
CACHE_ENABLED=True
CACHE_BACKEND=simple
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
REDIS_URL=redis://localhost:6379/2

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=text

# Security
MAX_CONTENT_LENGTH=1048576
